<resources>

    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
    </style>

    <style name="MenuIcon">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">@dimen/iconTextSize</item>
        <item name="android:background">@color/transparent</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/iconMargin</item>
    </style>

    <style name="HomePages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/basicScreenPadding</item>
        <item name="android:background">@drawable/background</item>
    </style>

</resources>
